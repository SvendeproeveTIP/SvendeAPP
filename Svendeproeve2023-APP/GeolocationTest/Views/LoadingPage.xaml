<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeolocationTest.Views.LoadingPage"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White"
             Title="LoadingPage">
    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#ff0051"/>
    </ContentPage.Behaviors>
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <ActivityIndicator Color="#ff0051"
                               IsRunning="True" HeightRequest="50" WidthRequest="50"
                               IsVisible="True" />
        <Label TextColor="Black" Text="Checking authentication..." HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>